<center><h2 class="text-danger">Log in</h2></center>
<div class="form-horizontal">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="field form-group">
      <%= f.label :email,class:"control-label col-sm-2" %><br />
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true,class:"form-control" %>
    </div>
    </div>

    <div class="field form-group">
      <%= f.label :password,class:"control-label col-sm-2" %><br />
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off",class: "form-control" %>
    </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
      </div>
  </div>
  
  <% end -%>

  <div class="actions col-sm-offset-2">
    <%= f.submit "Log in",class:"btn btn-sm btn-info" %>
  </div>
<% end %>
<div class="col-sm-offset-2">
<%= render "devise/shared/links" %>
</div>
</div>
</div>